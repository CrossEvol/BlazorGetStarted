@rendermode InteractiveServer
@using BlazorAppPizza.Services

@inject OrderState OrderState

<MudCard>
    <MudCardHeader Class="p-0">
        <CardHeaderContent>
            <MudText Typo="Typo.button" Class="overflow-hidden d-inline-block">@Pizza.Special.Name</MudText>
        </CardHeaderContent>
        <CardHeaderActions>
            <MudIconButton @onclick="@(()=>OrderState.RemoveConfiguredPizza(Pizza))" Icon="@Icons.Material.Filled.Close" Color="Color.Default" />
        </CardHeaderActions>
    </MudCardHeader>
    <MudCardContent Class="p-0">
        <MudChip Color="Color.Dark">@Pizza.Size"</MudChip>
        <MudChip Color="Color.Dark">£@Pizza.GetFormattedTotalPrice()</MudChip>
    </MudCardContent>
</MudCard>

@code{
    [Parameter]
    public BlazorAppPizza.Pizza Pizza { get; set; }
}